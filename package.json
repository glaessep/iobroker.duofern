{
    "name": "iobroker.duofern",
    "version": "0.3.4",
    "description": "ioBroker Adapter for Rademacher DuoFern",
    "author": "Patrick Gläßer",
    "license": "MIT",
    "main": "build/main.js",
    "files": [
        "admin/",
        "build/",
        "io-package.json",
        "LICENSE"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/glaessep/iobroker.duofern.git"
    },
    "bugs": {
        "url": "https://github.com/glaessep/iobroker.duofern/issues"
    },
    "homepage": "https://github.com/glaessep/iobroker.duofern",
    "scripts": {
        "build": "tsc",
        "prepare": "npm run build",
        "watch": "tsc -w",
        "test-env": "ts-node src/cli.ts",
        "test": "mocha --require ts-node/register 'test/**/*.test.ts' --timeout 10000 --exit",
        "test:coverage": "nyc --reporter=text --reporter=html --reporter=lcov --report-dir=coverage --temp-dir=.nyc_output npm test",
        "test:coverage:check": "nyc --reporter=text --reporter=html --reporter=lcov --report-dir=coverage --temp-dir=.nyc_output --check-coverage --lines 95 --functions 90 --branches 80 --statements 95 npm test",
        "lint": "eslint src/ --ext .ts",
        "translate": "translate-adapter",
        "version": "node scripts/bump-version.js",
        "deploy": "npm run build && TARBALL=$(npm pack) && IOBROKER_DIR=${IOBROKER_DIR:-/opt/iobroker} && ADAPTER_DIR=${ADAPTER_DIR:-$HOME/iobroker.duofern} && cd \"$IOBROKER_DIR\" && node \"$IOBROKER_DIR/node_modules/.bin/iobroker\" stop duofern && npm i --force \"$ADAPTER_DIR/$TARBALL\" && node \"$IOBROKER_DIR/node_modules/.bin/iobroker\" upload duofern && node \"$IOBROKER_DIR/node_modules/.bin/iobroker\" start duofern",
        "deploy-fresh": "npm run build && TARBALL=$(npm pack) && IOBROKER_DIR=${IOBROKER_DIR:-/opt/iobroker} && ADAPTER_DIR=${ADAPTER_DIR:-$HOME/iobroker.duofern} && cd \"$IOBROKER_DIR\" && node \"$IOBROKER_DIR/node_modules/.bin/iobroker\" stop duofern && (node \"$IOBROKER_DIR/node_modules/.bin/iobroker\" del duofern || true) && npm i --force \"$ADAPTER_DIR/$TARBALL\" && node \"$IOBROKER_DIR/node_modules/.bin/iobroker\" upload duofern && node \"$IOBROKER_DIR/node_modules/.bin/iobroker\" add duofern 0 && node \"$IOBROKER_DIR/node_modules/.bin/iobroker\" start duofern"
    },
    "dependencies": {
        "@iobroker/adapter-core": "^3.2.3",
        "serialport": "^13.0.0"
    },
    "devDependencies": {
        "@iobroker/adapter-dev": "^1.3.0",
        "@iobroker/testing": "^5.0.0",
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/chai": "^5.0.0",
        "@types/chai-as-promised": "^8.0.0",
        "@types/mocha": "^10.0.0",
        "@types/node": "^22.10.2",
        "@types/proxyquire": "^1.3.31",
        "@types/sinon": "^17.0.0",
        "@types/sinon-chai": "^4.0.0",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "chai": "^5.1.0",
        "chai-as-promised": "^8.0.0",
        "eslint": "^9.0.0",
        "mocha": "^10.8.2",
        "nyc": "^17.1.0",
        "proxyquire": "^2.1.3",
        "sinon": "^19.0.2",
        "sinon-chai": "^4.0.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.2"
    }
}